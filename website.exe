<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ResellHub - Your One-Stop Marketplace</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f1f3f6;
        }
        .active-category {
            color: #2563eb;
            font-weight: 600;
            border-bottom: 2px solid #2563eb;
        }
    </style>
</head>
<body>

    <!-- Header -->
    <header class="bg-white shadow-md sticky top-0 z-50">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between py-3">
                <!-- Logo -->
                <a href="#" class="text-3xl font-bold text-blue-600">
                    ResellHub
                </a>

                <!-- Search Bar -->
                <div class="hidden sm:flex flex-grow max-w-xl mx-4">
                    <input id="search-input" type="text" placeholder="Search for products, brands and more" class="w-full px-4 py-2 border border-gray-300 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <button class="bg-blue-600 text-white px-5 py-2 rounded-r-lg hover:bg-blue-700 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                    </button>
                </div>

                <!-- Header Icons -->
                <div class="flex items-center space-x-2 text-gray-700">
                    <a href="#" class="flex items-center space-x-2 px-3 py-2 rounded-lg hover:bg-gray-100 hover:text-blue-600 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                        <span class="hidden md:inline">Account</span>
                    </a>
                    <a href="#" class="flex items-center space-x-2 px-3 py-2 rounded-lg hover:bg-gray-100 hover:text-blue-600 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path><line x1="3" y1="6" x2="21" y2="6"></line><path d="M16 10a4 4 0 0 1-8 0"></path></svg>
                        <span class="hidden md:inline">Orders</span>
                    </a>
                    <a href="#" class="flex items-center space-x-2 px-3 py-2 rounded-lg hover:bg-gray-100 hover:text-blue-600 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
                        <span class="hidden md:inline">Cart</span>
                    </a>
                </div>
            </div>
             <!-- Search bar for mobile -->
            <div class="sm:hidden flex flex-grow w-full pb-3 px-1">
                <input id="search-input-mobile" type="text" placeholder="Search for products..." class="w-full px-4 py-2 border border-gray-300 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                <button class="bg-blue-600 text-white px-5 py-2 rounded-r-lg hover:bg-blue-700 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                </button>
            </div>
        </div>
    </header>

    <!-- Category Navigation -->
    <nav class="bg-white shadow-sm">
        <div class="container mx-auto px-4">
            <ul id="category-nav" class="flex items-center justify-center space-x-4 sm:space-x-8 py-3 overflow-x-auto whitespace-nowrap">
                <li><a href="#" class="category-link text-gray-700 hover:text-blue-600 py-2 active-category" data-category="All">All</a></li>
                <li><a href="#" class="category-link text-gray-700 hover:text-blue-600 py-2" data-category="Electronics">Electronics</a></li>
                <li><a href="#" class="category-link text-gray-700 hover:text-blue-600 py-2" data-category="Fashion">Fashion</a></li>
                <li><a href="#" class="category-link text-gray-700 hover:text-blue-600 py-2" data-category="Home">Home & Kitchen</a></li>
                <li><a href="#" class="category-link text-gray-700 hover:text-blue-600 py-2" data-category="Books">Books</a></li>
                <li><a href="#" class="category-link text-gray-700 hover:text-blue-600 py-2" data-category="Sports">Sports & Fitness</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        <!-- Hero Banner -->
        <section class="mb-8">
            <div class="bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg p-8 md:p-12 text-white flex items-center justify-between">
                <div>
                    <h1 class="text-3xl md:text-5xl font-bold mb-2">Grand Festive Sale</h1>
                    <p class="text-lg md:text-xl mb-6">Up to 70% off on your favorite brands!</p>
                    <a href="#" class="bg-white text-blue-600 font-bold py-3 px-6 rounded-lg hover:bg-gray-100 transition-colors">Shop Now</a>
                </div>
                <img src="https://placehold.co/400x200/FFFFFF/3B82F6?text=Top+Deals" alt="Sale Banner" class="hidden md:block w-1/3 rounded-lg">
            </div>
        </section>

        <!-- Product Grid -->
        <section>
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Featured Products</h2>
            <div id="product-grid" class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 md:gap-6">
                <!-- Product cards will be injected here by JavaScript -->
            </div>
            <div id="no-results" class="hidden text-center py-16">
                <h3 class="text-2xl font-semibold text-gray-600">No products found</h3>
                <p class="text-gray-500 mt-2">Try adjusting your search or category selection.</p>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white mt-12">
        <div class="container mx-auto px-4 py-10">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                <div>
                    <h3 class="font-bold text-lg mb-4">Get to Know Us</h3>
                    <ul>
                        <li class="mb-2"><a href="#" class="hover:underline">About Us</a></li>
                        <li class="mb-2"><a href="#" class="hover:underline">Careers</a></li>
                        <li class="mb-2"><a href="#" class="hover:underline">Press Releases</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-bold text-lg mb-4">Connect with Us</h3>
                    <ul>
                        <li class="mb-2"><a href="#" class="hover:underline">Facebook</a></li>
                        <li class="mb-2"><a href="#" class="hover:underline">Twitter</a></li>
                        <li class="mb-2"><a href="#" class="hover:underline">Instagram</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-bold text-lg mb-4">Make Money with Us</h3>
                    <ul>
                        <li class="mb-2"><a href="#" class="hover:underline">Sell on ResellHub</a></li>
                        <li class="mb-2"><a href="#" class="hover:underline">Become an Affiliate</a></li>
                        <li class="mb-2"><a href="#" class="hover:underline">Advertise Your Products</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-bold text-lg mb-4">Let Us Help You</h3>
                    <ul>
                        <li class="mb-2"><a href="#" class="hover:underline">Your Account</a></li>
                        <li class="mb-2"><a href="#" class="hover:underline">Returns Centre</a></li>
                        <li class="mb-2"><a href="#" class="hover:underline">Help</a></li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-gray-700 mt-8 pt-6 text-center text-gray-400">
                <p>&copy; 2024, ResellHub.com, Inc. or its affiliates</p>
            </div>
        </div>
    </footer>


    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // --- MOCK PRODUCT DATA ---
            const products = [
                { id: 1, name: 'Wireless Bluetooth Headphones', price: 59.99, originalPrice: 99.99, rating: 4.5, category: 'Electronics', image: 'https://placehold.co/400x400/3B82F6/FFFFFF?text=Headphones' },
                { id: 2, name: 'Modern Smartwatch Series 7', price: 199.50, originalPrice: 249.99, rating: 4.8, category: 'Electronics', image: 'https://placehold.co/400x400/10B981/FFFFFF?text=Smartwatch' },
                { id: 3, name: 'Men\'s Casual Denim Jacket', price: 75.00, originalPrice: 120.00, rating: 4.2, category: 'Fashion', image: 'https://placehold.co/400x400/F59E0B/FFFFFF?text=Jacket' },
                { id: 4, name: 'Ergonomic Office Chair', price: 150.00, originalPrice: 250.00, rating: 4.6, category: 'Home', image: 'https://placehold.co/400x400/6366F1/FFFFFF?text=Chair' },
                { id: 5, name: 'The Silent Patient Novel', price: 12.99, originalPrice: 25.00, rating: 4.9, category: 'Books', image: 'https://placehold.co/400x400/EC4899/FFFFFF?text=Book' },
                { id: 6, name: 'Professional Yoga Mat', price: 29.99, originalPrice: 45.00, rating: 4.7, category: 'Sports', image: 'https://placehold.co/400x400/8B5CF6/FFFFFF?text=Yoga+Mat' },
                { id: 7, name: '4K Ultra HD Android TV', price: 399.00, originalPrice: 550.00, rating: 4.5, category: 'Electronics', image: 'https://placehold.co/400x400/3B82F6/FFFFFF?text=Smart+TV' },
                { id: 8, name: 'Women\'s Leather Handbag', price: 89.90, originalPrice: 150.00, rating: 4.4, category: 'Fashion', image: 'https://placehold.co/400x400/F59E0B/FFFFFF?text=Handbag' },
                { id: 9, name: 'Non-Stick Cookware Set', price: 120.00, originalPrice: 180.00, rating: 4.3, category: 'Home', image: 'https://placehold.co/400x400/6366F1/FFFFFF?text=Cookware' },
                { id: 10, name: 'Atomic Habits by James Clear', price: 15.50, originalPrice: 27.00, rating: 5.0, category: 'Books', image: 'https://placehold.co/400x400/EC4899/FFFFFF?text=Book' },
                { id: 11, name: 'Adjustable Dumbbell Set', price: 199.99, originalPrice: 300.00, rating: 4.8, category: 'Sports', image: 'https://placehold.co/400x400/8B5CF6/FFFFFF?text=Dumbbells' },
                { id: 12, name: 'Portable Power Bank 20000mAh', price: 35.99, originalPrice: 50.00, rating: 4.6, category: 'Electronics', image: 'https://placehold.co/400x400/10B981/FFFFFF?text=Power+Bank' },
            ];

            // --- DOM ELEMENTS ---
            const productGrid = document.getElementById('product-grid');
            const searchInput = document.getElementById('search-input');
            const searchInputMobile = document.getElementById('search-input-mobile');
            const categoryNav = document.getElementById('category-nav');
            const noResultsDiv = document.getElementById('no-results');

            // --- FUNCTIONS ---

            /**
             * Renders stars based on product rating
             * @param {number} rating - The product rating (e.g., 4.5)
             * @returns {string} - HTML string for stars
             */
            function renderStars(rating) {
                let stars = '';
                const fullStars = Math.floor(rating);
                const halfStar = rating % 1 !== 0;
                const emptyStars = 5 - fullStars - (halfStar ? 1 : 0);

                for (let i = 0; i < fullStars; i++) {
                    stars += '<svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>';
                }
                if (halfStar) {
                    stars += '<svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>';
                }
                for (let i = 0; i < emptyStars; i++) {
                    stars += '<svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>';
                }
                return stars;
            }

            /**
             * Displays products in the grid
             * @param {Array} productsToDisplay - Array of product objects to show
             */
            function displayProducts(productsToDisplay) {
                productGrid.innerHTML = ''; // Clear existing products
                if (productsToDisplay.length === 0) {
                    productGrid.classList.add('hidden');
                    noResultsDiv.classList.remove('hidden');
                } else {
                    productGrid.classList.remove('hidden');
                    noResultsDiv.classList.add('hidden');
                    productsToDisplay.forEach(product => {
                        const productCard = `
                            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 group">
                                <div class="w-full h-40 sm:h-56 bg-gray-200 flex items-center justify-center">
                                    <img src="${product.image}" alt="${product.name}" class="w-full h-full object-cover">
                                </div>
                                <div class="p-4">
                                    <h3 class="text-sm sm:text-base font-semibold text-gray-800 truncate group-hover:text-blue-600">${product.name}</h3>
                                    <div class="flex items-center my-2">
                                        ${renderStars(product.rating)}
                                        <span class="text-xs text-gray-500 ml-2">${product.rating}</span>
                                    </div>
                                    <div class="flex items-baseline space-x-2">
                                        <p class="text-lg sm:text-xl font-bold text-gray-900">$${product.price}</p>
                                        <p class="text-sm text-gray-500 line-through">$${product.originalPrice}</p>
                                    </div>
                                    <button data-product-id="${product.id}" class="add-to-cart-btn w-full mt-4 bg-blue-600 text-white py-2 rounded-lg font-semibold hover:bg-blue-700 transition-colors text-sm">Add to Cart</button>
                                </div>
                            </div>
                        `;
                        productGrid.innerHTML += productCard;
                    });
                }
            }

            /**
             * Filters products based on search term and active category
             */
            function filterProducts() {
                const searchTerm = (searchInput.value || searchInputMobile.value).toLowerCase();
                const activeCategory = document.querySelector('.active-category').dataset.category;

                let filteredProducts = products;

                // Filter by category
                if (activeCategory !== 'All') {
                    filteredProducts = filteredProducts.filter(product => product.category === activeCategory);
                }

                // Filter by search term
                if (searchTerm) {
                    filteredProducts = filteredProducts.filter(product =>
                        product.name.toLowerCase().includes(searchTerm) ||
                        product.category.toLowerCase().includes(searchTerm)
                    );
                }

                displayProducts(filteredProducts);
            }
            
            // --- EVENT LISTENERS ---

            // Search input listener
            searchInput.addEventListener('input', filterProducts);
            searchInputMobile.addEventListener('input', filterProducts);

            // Category navigation listener
            categoryNav.addEventListener('click', function(e) {
                e.preventDefault();
                if (e.target.classList.contains('category-link')) {
                    // Update active class
                    document.querySelectorAll('.category-link').forEach(link => link.classList.remove('active-category'));
                    e.target.classList.add('active-category');
                    
                    filterProducts();
                }
            });
            
             // Add to cart button listener (using event delegation)
            productGrid.addEventListener('click', function(e) {
                if (e.target.classList.contains('add-to-cart-btn')) {
                    const button = e.target;
                    button.textContent = 'Added!';
                    button.classList.add('bg-green-500', 'cursor-not-allowed');
                    button.disabled = true;

                    setTimeout(() => {
                        button.textContent = 'Add to Cart';
                        button.classList.remove('bg-green-500', 'cursor-not-allowed');
                        button.disabled = false;
                    }, 2000);
                }
            });


            // --- INITIAL LOAD ---
            displayProducts(products);
        });
    </script>
</body>
</html
